{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "emitDeclarationOnly": true,
        "outDir": "./lib/",
        "declaration": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "rollup.config.js"
    ]
}